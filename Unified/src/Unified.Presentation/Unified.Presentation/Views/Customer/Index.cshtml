            <th>
                @Html.DisplayNameFor(model => model.FavoriteFootballTeam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavoriteFootballTeam)
            </td>
            @if (string.IsNullOrEmpty(item.FavoriteFootballTeam))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", "MrgreenCustomer", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", "MrgreenCustomer", new {  id=item.Id  }) |
                    @Html.ActionLink("Delete", "Delete", "MrgreenCustomer", new {  id=item.Id  })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", "RedbetCustomer", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", "RedbetCustomer", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", "RedbetCustomer", new { id = item.Id })
                </td>
            }
